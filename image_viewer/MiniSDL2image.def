(*!m2iso*)
DEFINITION MODULE FOR "C" MiniSDL2image;

FROM SYSTEM IMPORT BITSET32, INTEGER32;
FROM MiniSDL2 IMPORT PSDL_Surface;

EXPORT UNQUALIFIED
  (* constants *)
  IMG_INIT_JPG, IMG_INIT_PNG, IMG_INIT_TIF, IMG_INIT_WEBP, IMG_INIT_JXL, IMG_INIT_AVIF,
  IMG_INIT_ALL_FORMATS,
  (* functions *)
  IMG_Init, IMG_Quit, IMG_Load;

CONST
  IMG_INIT_JPG = BITSET32(01H);
  IMG_INIT_PNG = BITSET32(02H);
  IMG_INIT_TIF = BITSET32(04H);
  IMG_INIT_WEBP = BITSET32(08H);
  IMG_INIT_JXL = BITSET32(010H);
  IMG_INIT_AVIF = BITSET32(020H);
  IMG_INIT_ALL_FORMATS = IMG_INIT_JPG * IMG_INIT_PNG * IMG_INIT_TIF * IMG_INIT_WEBP *
                         IMG_INIT_JXL * IMG_INIT_AVIF;

PROCEDURE IMG_Init(Flags: INTEGER32): [INTEGER32];
PROCEDURE IMG_Quit;
PROCEDURE IMG_Load(File: ARRAY OF CHAR): PSDL_Surface;

END MiniSDL2image.
